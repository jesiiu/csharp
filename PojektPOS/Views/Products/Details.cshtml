@model Products

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Rozmiar
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class = "col-sm-2">
            EAN
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EanCode)
        </dd>
        <dt class = "col-sm-2">
            Indeks
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProducerCode)
        </dd>
        <dt class = "col-sm-2">
            Cena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Ilość
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class = "col-sm-2">
            Producent
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class = "col-sm-2">
            Zdjęcia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoUrl)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">                   
        <div class="form-group" style="padding-top: 5px">
            <button type="button" class="btn btn-dark">Edytowanie</button>
        </div></a> 
    <a asp-action="Index">
         <div class="form-group" style="padding-top: 5px">
            <button type="button" class="btn btn-dark">Powrót do listy produktów</button>
        </div></a> 
    </a>
</div>
